<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/surface_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:scaleType="centerCrop"/>

    <TextureView
        android:id="@+id/surface_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <org.easydarwin.easyplayer.views.OverlayCanvasView
        android:id="@+id/overlay_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:scaleType="centerCrop"/>

    <ProgressBar
        android:id="@android:id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <org.easydarwin.easyplayer.views.AngleView
        android:id="@+id/render_angle_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:visibility="invisible"
        app:anchorRadio="5dp"
        app:arcColor="#ffffffff"
        app:arcWidth="2.5dp"
        app:currentSweepAngle="45"
        app:startAngle="225"
        app:sweepAngle="90"
        app:textSize="24sp" />

    <ImageView
        android:id="@+id/live_video_snap_thumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="3dp"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onTakePictureThumbClicked"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        style="@style/Widget.AppCompat.ActionButton"
        android:text="退出全屏"
        android:gravity="center"
        android:id="@+id/quit_fullscreen"
        android:visibility="gone"
        android:textColor="#fff"
        android:layout_gravity="right|top"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Test recording steps:\n1 Start recording;\n2 Pause recording and wait for a while;\n3 Resume recording;\n4 Stop recording; \nThen check whether the video file is continuous. Steps 2 and 3 can be repeated multiple times\nThe recording file path is /sdcard/test.mp4\nThe existing file will be overwritten each time the recording is made."
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/start_or_stop_record"
            android:text="Start/stop recording"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/pause_or_resume_record"
            android:layout_height="wrap_content"
            android:onClick="onToggleRecord"
            android:text="Pause/resume recording" />
    </LinearLayout>
</FrameLayout>
